<main>
<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <h1><%= title %></h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid justify-content-start">
            <button class="btn btn-sm btn-outline-success me-2" href="/userBids/new" disabled>Add New Bid (Disabled)</button>
            <!-- <a class="btn btn-sm btn-outline-danger me-2" href="/userBids/new/?id=#">Test a Bid</a>  -->
        </div>
    </nav>
    
<table class="table">
<thead>
    <tr>
        <th scope="col">Bid No.</th>
        <th scope="col">Auctioned Item</th>
        <th scope="col">Bid Amount</th>
        <th scope="col">Note</th>
        <th scope="col">Created</th>
        <th scope="col">Updated</th>
        <th scope="col">Action(s)</th>
    </tr>
</thead>

<% bids.forEach(function (bid, index) { %>
        <tr>
        <td><%= index+1 %>. </td>
        <td><a href="/userBids/detail/?id=<%= bid._id %>"><%= bid.auction.name %></a></td>
        <td><%= bid.amount %></td>
        <td><%= bid.note %></td>
        <td><%= dayjs.utc(bid.createdAt).format('DD/MM/YYYY') %></td>
        <td>Updated <%= dayjs.utc(bid.updatedAt).fromNow(true) %> ago</td>
        <td>
        <% if(bid.user._id.equals(user._id)){ %>
            <a class="btn btn-sm btn-warning" href="/userBids/edit?id=<%= bid._id %>"><i class="bi-pencil-fill"></i></a>
        <% }else{ %>
            <a class="btn btn-sm btn-secondary disabled" role="button" aria-disabled="true"><i class="bi-pencil-fill"></i></a>
        <% } %>
            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#D<%= index+1 %>" disabled>
            <i class="bi-trash3-fill"></i></button>

<div class="modal fade" id="D<%= index+1 %>" tabindex="-1" aria-labelledby="exampleModalLabel<%= index+1 %>" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-3 text-danger" id="exampleModalLabel<%= index+1 %>">Are you sure you want to delete your Bid?</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            Auction: [Auction / Item Name] 
            Amount: <%= bid.amount %>
        </div>
        <div class="modal-footer">
        <form method="POST" action="/userBids/delete?id=<%= bid._id %>">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>
    </div>
</div>
</div>                
        </td>
        </tr>
<% }); %>
</table>

</div>
</div>

</main>